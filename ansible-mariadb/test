#!/bin/bash

# test: Test debops.mysql
# Copyright (C) 2014 Nick Janetakis <nick.janetakis@gmail.com>
# Part of the DebOps project - http://debops.org/


. "${ROLESPEC_LIB}/main"
. "${ROLESPEC_TEST}/../defaults.conf"


install_ansible ${test_ansible_version}
ansible_plugins


ansible-galaxy install git+https://github.com/ganto/ansible-mariadb_server.git,galera-repo-update
ln -s /home/travis/build/ganto/ansible-mariadb/rolespec/roles/ansible-mariadb_server /home/travis/build/ganto/ansible-mariadb/rolespec/roles/debops.mariadb_server


stop mysql
purge ${ROLESPEC_MYSQL_LIBS}


assert_playbook_check_runs
assert_playbook_idempotent


assert_in "$(mysql -sN -e 'show databases;')" "testapp"
assert_in "$(mysql -sN -e 'show grants;')" "testapp"

assert_docs

