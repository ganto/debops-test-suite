#!/bin/bash

# test: Test debops.mysql
# Copyright (C) 2014 Nick Janetakis <nick.janetakis@gmail.com>
# Part of the DebOps project - http://debops.org/


. "${ROLESPEC_LIB}/main"
. "${ROLESPEC_TEST}/../defaults.conf"


install_ansible ${test_ansible_version}
ansible_plugins


ansible-galaxy -f install debops.ferm debops.tcpwrappers


stop mysql
purge mysql-common mysql-server-5.6 mysql-server-core-5.6 mysql-client-5.6 mysql-client-core-5.6


assert_playbook_check_runs
assert_playbook_idempotent


assert_running "mysql"
assert_in_file "/etc/mysql/conf.d/mysqld.cnf" "0.0.0.0"
assert_iptables_allow "mysql"

assert_docs

